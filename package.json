{
	"devDependencies": {
		"brotli": "^1.3.2",
		"html-minifier": "^4.0.0"
	},
	"scripts": {
		"html:minify": "html-minifier --collapse-boolean-attributes --collapse-whitespace --minify-css --minify-js --remove-attribute-quotes --remove-comments --remove-tag-whitespace --input-dir resources --output-dir public",
		"html:precompress": "node brotli-compress.mjs",
		"build:html": "pnpm html:minify && pnpm html:precompress"
	}
}
