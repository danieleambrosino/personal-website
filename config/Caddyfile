danieleambrosino.it {
	root * /var/www/danieleambrosino.it/www/public

	file_server {
		index en.html
		precompressed br
	}

	@assets {
		path_regexp \.(?:woff2|avif|webp|jpeg|svg)$
	}
	@italian {
		header Accept-Language it*
	}

	file_server @italian {
		index it.html
		precompressed br
	}

	header {
		Strict-Transport-Security max-age=31536000
		Vary Accept-Language
		Content-Security-Policy "default-src 'self'; style-src 'sha256-OEPBd6mOJD+KxAZTjaYjNx740dbtijZwrSqe5jKLOGQ='"
	}
	header @assets Cache-Control max-age=31536000

	encode gzip
}

www.danieleambrosino.it {
	redir https://danieleambrosino.it{uri} permanent
}
